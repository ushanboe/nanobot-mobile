# Nanobot Environment Variables
# Copy this to .env and fill in your values

# LLM API Keys (at least one required)
ANTHROPIC_API_KEY=your-anthropic-key-here
OPENAI_API_KEY=your-openai-key-here

# Default model (optional)
NANOBOT_DEFAULT_MODEL=claude-sonnet-4-20250514

# Database (Railway provides DATABASE_URL automatically if you add Postgres)
# DATABASE_URL=postgresql://user:pass@host:5432/db

# Server config
PORT=8080

# Gmail OAuth (from Google Cloud Console)
# Download OAuth keys JSON from Google Cloud Console > APIs & Services > Credentials
GMAIL_OAUTH_KEYS_JSON={"installed":{"client_id":"xxx.apps.googleusercontent.com","client_secret":"xxx",...}}
# Run `node setup-gmail-token.js` locally to get this token after OAuth consent
GMAIL_CREDENTIALS_JSON={"type":"authorized_user","client_id":"xxx","client_secret":"xxx","refresh_token":"xxx"}

# Microsoft 365 (from Azure Portal > App Registrations)
# Required permissions: Mail.Read, Mail.Send, Files.Read, Files.ReadWrite
MS365_MCP_CLIENT_ID=your-azure-app-client-id
MS365_MCP_CLIENT_SECRET=your-azure-client-secret
MS365_MCP_TENANT_ID=common
